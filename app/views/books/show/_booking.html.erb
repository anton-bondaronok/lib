<% if booking = current_user.bookings.find_by(book: @book) %>
  <div class="mt-2 px-2 py-1 text-xs rounded-full font-semibold max-w-fit <%= booking_badge_color(booking.status) %>">
    <%= booking.status.titleize %>
  </div>
<% else %>
  <%= button_to "Reserve", book_bookings_path(@book), method: :post, class: "mt-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>
