<% rounded_rating = @book.rating.to_f.round %>
<div class="flex items-center mb-4">
  <% 5.times do |i| %>
    <% if i < rounded_rating %>
      <span class="text-yellow-400 text-xl">★</span>
    <% else %>
      <span class="text-gray-300 text-xl">★</span>
    <% end %>
  <% end %>
  <span class="ml-2 text-sm text-gray-600"><%= number_with_precision(@book.rating, precision: 1) %>/5</span>
</div>
