<div class="max-w-xl mx-auto bg-white p-6 rounded-xl shadow">
  <div class="flex justify-between">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4">Genre</h1>
  </div>

  <div class="space-y-4">
    <div class="flex justify-between">
      <span class="text-md text-gray-500 py-1">Genre Name:</span>
      <span class="text-base text-gray-800 font-medium"><%= @genre.name %></span>
    </div>

    <div class="flex justify-between">
      <span class="text-md text-gray-500">Created At:</span>
      <span class="text-base text-gray-800 font-medium py-1">
        <%= @genre.created_at ? l(@genre.created_at, format: :long) : "Not created" %>
      </span>
    </div>
  </div>

  <div class="mt-6 flex justify-between">
    <div class="inline-block">
      <%= link_to "Edit this genre", edit_admin_genre_path(@genre), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      <%= link_to "Back to genres", admin_genres_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    </div>
    <div class="inline-block ml-2">
      <%= button_to "Delete this genre", [:admin, @genre], method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
    </div>
  </div>
</div>
