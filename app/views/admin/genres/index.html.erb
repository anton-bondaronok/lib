<% content_for :title, "Genres" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Genres</h1>
    <%= link_to "New genre", new_admin_genre_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="admin_genres" class="min-w-full">
    <% if @genres.any? %>
      <% @genres.each do |genre| %>
        <%= render genre %>
        <p>
          <%= link_to "Show this genre", [:admin, genre], class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No genres found.</p>
    <% end %>
  </div>
</div>
