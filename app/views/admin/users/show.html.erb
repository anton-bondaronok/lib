<div class="max-w-2xl mx-auto bg-white p-6 rounded-xl shadow">
  <div class="flex gap-x-4">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4">Пользватель</h1>
  </div>

  <div class="space-y-4">
    <div class="flex justify-between">
      <span class="text-md text-gray-500 py-1">Полное имя:</span>
      <span class="text-base text-gray-800 font-medium"><%= @user.full_name %></span>
    </div>

    <div class="flex justify-between">
      <span class="text-md text-gray-500 py-1">Почта:</span>
      <span class="text-base text-gray-800 font-medium"><%= @user.email %></span>
    </div>

    <div class="flex justify-between">
      <span class="text-md text-gray-500">Роль:</span>
      <span class="mt-2 px-2 py-1 text-xs rounded-full font-semibold 
        <%= case @user.role
            when "super_admin" then "bg-red-100 text-red-700"
            when "librarian" then "bg-yellow-100 text-yellow-700"
            else "bg-indigo-100 text-indigo-700"
        end %>">

        <%= case @user.role
            when "super_admin" then "Администратор"
            when "librarian" then "Библиотекарь"
            else "Пользователь"
            end %>
      </span>
    </div>

    <div class="flex justify-between">
      <span class="text-md text-gray-500">Зарегистрировался:</span>
      <span class="text-base text-gray-800 font-medium py-1">
        <%= @user.created_at ? l(@user.created_at, format: :long) : "Not created" %>
      </span>
    </div>

    <% if @user.user? %>
      <div class="flex justify-between">
        <span class="text-md text-gray-500">Регистрация подтверждена:</span>
        <span class="text-base text-gray-800 font-medium py-1">
          <%= @user.confirmed_at ? l(@user.confirmed_at, format: :long) : "Not confirmed" %>
        </span>
      </div>
    <% end %>

    <% if @user.locked? %>
      <div class="flex justify-between text-red-700">
        <span class="text-md">Заблокирован:</span>
        <span class="text-base font-medium py-1">
          <%= @user.locked_at ? l(@user.locked_at, format: :long) : "Not locked" %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="mt-6 flex flex-col gap-y-2 justify-between">
    <div class="inline-block">
      <% unless @user == current_user %>
        <% unless @user.confirmed? %>
          <%= link_to "Подтвердить", confirm_admin_user_path(@user),
                      data: { turbo_method: :patch },
                      class: "px-3.5 py-2.5 bg-green-600 text-white rounded-md font-medium hover:bg-green-700" %>
        <% end %>

        <% if @user.locked? %>
          <%= link_to "Разблокирвать", unlock_admin_user_path(@user),
                      data: { turbo_method: :patch },
                      class: "px-3.5 py-2.5 bg-green-600 text-white rounded-md font-medium hover:bg-green-700" %>
        <% else %>
          <%= link_to "Заблокировать", lock_admin_user_path(@user),
                      data: { turbo_method: :patch },
                      class: "px-3.5 py-2.5 bg-orange-600 text-white rounded-md font-medium hover:bg-orange-700" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="mt-6 flex justify-between">
    <div class="inline-block">
      <%= link_to "Редактировать", edit_admin_user_path(@user), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
      <%= link_to "К пользователям", admin_users_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    </div>
    <div class="inline-block">
      <% unless @user == current_user %>
        <div class="ml-auto inline-block">
          <%= button_to "Удалить", [:admin, @user], method: :delete,
              data: { turbo_confirm: "Вы уверены?" },
              class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
