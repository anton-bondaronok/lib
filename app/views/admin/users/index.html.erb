<div class="bg-white p-6 rounded-xl shadow">
  <div class="flex gap-x-6 items-center mb-6">
    <h1 class="font-bold text-4xl">Пользователи</h1>
    <%= link_to "Новый пользователь", new_admin_user_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" if current_user.super_admin? %>
  </div>

  <%= form_with url: admin_users_path, method: :get, local: true, class: "mb-4" do |f| %>
    <div class="flex gap-2">
      <%= f.text_field :query, value: params[:query], placeholder: "Искать пользователей...", class: "w-full px-3 py-2 border rounded-md shadow-sm focus:ring focus:border-indigo-300" %>
      <%= f.submit "Поиск", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
    </div>
  <% end %>

  <table class="min-w-full table-auto border-gray-200 rounded-lg overflow-hidden shadow-sm">
    <thead class="bg-gray-100 font-semibold text-gray-700">
      <tr>
        <th class="px-4 py-2 text-left">ФИО</th>
        <th class="px-4 py-2 text-left">Почта</th>
        <th class="px-4 py-2 text-left">Роль</th>
        <th class="px-4 py-2 text-left">Зарегистирован</th>
        <th class="px-4 py-2"></th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100 text-gray-800">
      <% @users.each do |user| %>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-4"><%= user.full_name %></td>
          <td class="px-4 py-4"><%= user.email %></td>
          <td class="px-4 py-4 capitalize">
            <span class="mt-2 px-2 py-1 text-xs rounded-full font-semibold 
              <%= case user.role
                  when "super_admin" then "bg-red-100 text-red-700"
                  when "librarian" then "bg-yellow-100 text-yellow-700"
                  else "bg-indigo-100 text-indigo-700"
                  end %>">
              <%= case user.role
                  when "super_admin" then "Администратор"
                  when "librarian" then "Библиотекарь"
                  else "Пользователь"
                  end %>
            </span>
          </td>
          <td class="px-4 py-4"><%= l(user.created_at, format: :long) %></td>
          <td class="px-4 py-4 text-right">
            <%= link_to "Показать", admin_user_path(user), class: "text-indigo-600 hover:underline mr-2" %>
            <%= link_to "Редактировать", edit_admin_user_path(user), class: "text-indigo-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
