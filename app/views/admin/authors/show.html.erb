<% content_for :title, "Showing author" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Showing author</h1>

  <%= render @author %>

  <%= link_to "Edit this author", edit_admin_author_path(@author), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to authors", admin_authors_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy this author", [:admin, @author], method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  </div>
</div>
