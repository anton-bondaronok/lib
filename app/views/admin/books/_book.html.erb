<div id="<%= dom_id book %>" class="flex gap-x-4">
  <div class="p-4">
    <% if book.avatar.attached? %>
      <%= picture_tag(
        url_for(book.avatar),
        image: { class: "rounded-md mx-auto object-cover h-[160px] w-[100px]" }
      )%>
    <% end %>
  </div>
  <div>
    <h3 class="my-5 font-bold text-2xl">
      <%= book.name %>
    </h3>
    <p class="my-5">
      <%= book.description %>
    </p>
  </div>
</div>
