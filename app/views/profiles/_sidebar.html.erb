<div class="flex flex-col w-64 rounded-lg">
  <div class="space-y-1">
    <!-- Profile Info -->
    <%= link_to 'Profile Info', profile_path, 
        class: "block text-gray-700 hover:text-indigo-600 font-medium py-2 px-4 rounded-md hover:bg-indigo-50 transition 
                #{'bg-indigo-100 text-indigo-600' if current_page?(profile_path)}" %>

    <!-- Edit Profile -->
    <%= link_to 'Edit Profile', edit_profile_path, 
        class: "block text-gray-700 hover:text-indigo-600 font-medium py-2 px-4 rounded-md hover:bg-indigo-50 transition
                #{'bg-indigo-100 text-indigo-600' if current_page?(edit_profile_path)}" %>

    <!-- Delete Profile -->
    <%= link_to 'Delete Profile', delete_profile_path, 
        class: "block text-red-600 hover:text-red-700 font-medium py-2 px-4 rounded-md hover:bg-red-50 transition
                #{'bg-indigo-100 text-indigo-600' if current_page?(delete_profile_path)}" %>
  </div>
</div>
