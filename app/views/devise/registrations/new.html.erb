<div class="flex items-center justify-center">
  <div class="max-w-md w-full bg-white p-8 rounded-2xl shadow-md">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Создайте учетную запись</h2>

    <% if resource.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 border border-red-300 text-red-800 rounded-md shadow-sm">
        <p class="font-semibold mb-2">Возникли ошибки:</p>
        <ul class="list-disc list-inside space-y-1 text-sm">
          <% resource.errors.each do |msg| %>
            <li><%= msg.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :email, class: "mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= f.label :full_name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :full_name, class: "mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border border-gray-300 p-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <%= f.submit "Зарегистироваться", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 font-semibold" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-600">
      У Вас уже есть учетная запись?
      <%= link_to "Войти", new_session_path(resource_name), class: "text-indigo-600 hover:underline font-medium" %>
    </p>
  </div>
</div>
